{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Elder",
	"scopeName": "source.elder",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#symbols"
		},
		{
			"include": "#numeric"
		},
		{
			"name": "meta.parentheses.elder",
			"begin": "\\(",
			"beginCaptures": {
				"0": {"name": "punctuation.section.parentheses.begin.elder"}
			},
			"end": "\\)",
			"endCaptures": {
				"0": {"name": "punctuation.section.parentheses.end.elder"}
			},
			"patterns": [
				{
					"include": "#main"
				}
			]
		},
		{
			"name": "meta.braces.elder",
			"begin": "\\{",
			"beginCaptures": {
				"0": {"name": "punctuation.section.braces.begin.elder"}
			},
			"end": "\\}",
			"endCaptures": {
				"0": {"name": "punctuation.section.braces.end.elder"}
			},
			"patterns": [
				{
					"include": "#main"
				}
			]
		},
		{
			"name": "meta.brackets.elder",
			"begin": "\\[",
			"beginCaptures": {
				"0": {"name": "punctuation.section.brackets.begin.elder"}
			},
			"end": "\\]",
			"endCaptures": {
				"0": {"name": "punctuation.section.brackets.end.elder"}
			},
			"patterns": [
				{
					"include": "#main"
				}
			]
		}
	],
	"repository": {
		"main": {
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#keywords"
				},
				{
					"include": "#symbols"
				},
				{
					"include": "#numeric"
				},
				{
					"include": "#parentheses"
				},
				{
					"include": "#braces"
				},
				{
					"include": "#brackets"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.elder",
				"match": "\\b(if|else|while|for|break|continue|return|switch|case|default|try|catch)\\b"
			}]
		},
		"symbols": {
			"patterns": [{
				"name": "keyword.operator.elder",
				"match": "\\b(!|@|./|../|..|~/|:=|:|=)\\b"
			}]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.block.elder",
					"begin": "/\\*",
					"end": "\\*/"
				},
				{
					"name": "comment.line.elder",
					"match": "(#|//).*$"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.single.elder",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.elder",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.double.elder",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.elder",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.template.elder",
					"begin": "`",
					"end": "`",
					"patterns": [
						{
							"name": "constant.character.escape.elder",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"numeric": {
			"patterns": [
				{
					"name": "constant.numeric.hex.elder",
					"match": "\\b0[xX][0-9a-fA-F]+\\b"
				},
				{
					"name": "constant.numeric.float.elder",
					"match": "\\b\\d+\\.\\d+([eE][-+]?\\d+)?\\b"
				},
				{
					"name": "constant.numeric.integer.elder",
					"match": "\\b\\d+\\b"
				}
			]
		}
	}
}
